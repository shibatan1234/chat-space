.side-bar
  .side-header
    .side-header__box
      %p.side-header__box__username
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__edit-user 
          = link_to new_group_path(current_user) do
            = icon('fas','edit')
        %li.side-header__box__new-group
          = link_to edit_group_path(current_user) do
            = icon('fas','cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__group-latest-message
            = group.show_last_message

